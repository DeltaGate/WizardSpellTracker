<Window x:Class="WizardSpellTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WizardSpellTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="unpreparedSpells" Margin="494,64,72,95" SelectionChanged="ListBox_SelectionChanged"/>
        <ListBox x:Name="preparedSpells" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="72,64,494,95"/>
        <Button x:Name="prepareBtn" Content="Prepare Spell" HorizontalAlignment="Left" Margin="574,364,0,0" VerticalAlignment="Top" Click="prepareBtn_Click"/>
        <Button x:Name="forgetBtn" Content="Forget Spell" HorizontalAlignment="Left" Margin="152,364,0,0" VerticalAlignment="Top" Click="forgetBtn_Click"/>
    </Grid>
</Window>
